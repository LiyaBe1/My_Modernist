<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dali">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTintMode="screen">

                <ImageView
                    android:id="@+id/imageView34"
                    android:layout_width="match_parent"
                    android:layout_height="481dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/salvador_dal__1939__1_" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="223dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="430dp"
                    android:fontFamily="serif"
                    android:text="Испания • 1904-1989"
                    android:textAlignment="textStart"
                    android:textColor="#D9FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="390dp"
                    android:fontFamily="serif"
                    android:text="Сальвадор Дали"
                    android:textColor="#D9FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:background="#BFFFFFFF"
                    app:icon="@drawable/free_icon_arrow_left_9847479"
                    app:iconGravity="textStart"
                    app:iconSize="35dp"
                    app:iconTint="#BFFFFFFF"
                    app:iconTintMode="src_in" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="423dp">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="serif"
                    android:text="Биография"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#E6534C4C"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/textLeo"
                    android:layout_width="359dp"
                    android:layout_height="234dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="10sp"
                    android:text="@string/Dali1"
                    android:textAlignment="center"
                    android:textColor="#E6534C4C"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="155dp"
                    android:layout_marginTop="340dp"
                    android:fontFamily="serif"
                    android:text="@string/seeMore"
                    android:textAlignment="center"
                    android:textColor="#999B432C"
                    android:textSize="14sp"
                    android:textStyle="italic" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center|top"
                android:fontFamily="serif"
                android:text="Интересные факты"
                android:textAlignment="viewStart"
                android:textColor="#E6534C4C"
                android:textSize="24sp"
                android:textStyle="italic"
                tools:ignore="RtlCompat" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView6540"
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="8sp"
                    android:text="• С 1939 по 1971 год Дали создал шесть уникальных обложек для Vogue, которые до сих пор считаются шедеврами в истории моды."
                    android:textAlignment="center"
                    android:textColor="#E6534C4C"
                    android:textSize="15sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="360dp"
                    android:layout_height="148dp"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:lineSpacingExtra="8sp"
                    android:text="• Именно Дали изобрел искусственные ногти, которые сегодня пользуются спросом. Изначально это были накладные ногти с встроенным маленьким зеркальцем в каждом ногте, чтобы смотреться."
                    android:textAlignment="center"
                    android:textColor="#E6534C4C"
                    android:textSize="15sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="87dp">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="50dp"
                    android:fontFamily="serif"
                    android:text="Работы художника"
                    android:textAlignment="viewStart"
                    android:textColor="#E6534C4C"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:ignore="RtlCompat" />

            </FrameLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="370dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="257dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="164dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="300dp"
                            android:fontFamily="serif"
                            android:text="Мадонна в частицах
                            1952"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="220dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_0516" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="256dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView90"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="265dp"
                            android:fontFamily="serif"
                            android:text="Дали, повернувшись спиною, пишет портрет Галы, повернувшейся спиною
                            1973"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView24"
                            android:layout_width="220dp"
                            android:layout_height="280dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_0600" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="251dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="270dp"
                            android:fontFamily="serif"
                            android:text="Женщина у окна в Фигерасе
                            1926 • 21.5×21 см"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="220dp"
                            android:layout_height="280dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_79082" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView97"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="285dp"
                            android:fontFamily="serif"
                            android:text="Галатея в момент творения
                            1954 "
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="260dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_76670" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="348dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView96"
                            android:layout_width="224dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="285dp"
                            android:fontFamily="serif"
                            android:text="Дом для эротомана
                            1932"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="320dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_38602" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="250dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView93"
                            android:layout_width="167dp"
                            android:layout_height="57dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="300dp"
                            android:fontFamily="serif"
                            android:text="Святой Иаков.
                            1964"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="220dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/_22987" />

                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="280dp"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>