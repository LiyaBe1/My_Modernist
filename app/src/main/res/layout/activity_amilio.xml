                            android:layout_width="158dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="300dp"
                            android:fontFamily="serif"
                            android:text="Импровизатор
                            1937"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView24"
                            android:layout_width="220dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_07463" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="220dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="290dp"
                            android:fontFamily="serif"
                            android:text="Человек с желтым цветком. Поэт идальго
                            1932"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView25"
                            android:layout_width="210dp"
                            android:layout_height="290dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_07464" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="241dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView97"
                            android:layout_width="154dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="300dp"
                            android:fontFamily="serif"
                            android:text="Арлекин
                            1925"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="230dp"
                            android:layout_height="285dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_07465" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="298dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView96"
                            android:layout_width="224dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="255dp"
                            android:fontFamily="serif"
                            android:text="Вино россо
1927"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="280dp"
                            android:layout_height="260dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/_07467" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="265dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView93"
                            android:layout_width="167dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="275dp"
                            android:fontFamily="serif"
                            android:text="Народная песня
                            1927"
                            android:textAlignment="center"
                            android:textColor="#99534C4C"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/imageView22"
                            android:layout_width="240dp"
                            android:layout_height="260dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="1"
                            android:src="@drawable/_07468" />

                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>